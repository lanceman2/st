#if @debug@ == 1

#  define DEBUG

#  define ASSERT(x) \
                                 st_assert(__FILE__, __LINE__,        \
                                  __func__, (x), #x, " ")
#  define VASSERT(x, fmt, ...) \
                                 st_assert(__FILE__, __LINE__, __func__,\
                                 (x), #x, fmt, ##__VA_ARGS__)
#else

#  define ASSERT(x)              /* empty macro */
#  define VASSERT(x, fmt, ...)   /* empty macro */

#endif // #if @debug@ == 1
